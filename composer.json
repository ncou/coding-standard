{
    "name": "chiron/coding-standard",
    "description": "Chiron PHP Coding Standard",
    "type": "phpcodesniffer-standard",
    "keywords": [
        "chiron",
        "coding",
        "standard",
        "coding standard",
        "code",
        "style",
        "ruleset",
        "ruleset.xml",
        "PHPCodeSniffer",
        "PHP_CodeSniffer",
        "CodeSniffer",
        "phpcs",
        "cs",
        "sniffer",
        "rules",
        "sniffs",
        "checks",
        "psr12",
        "psr-12",
        "doctrine",
        "slevomat"
    ],
    "license": "MIT",
    "support": {
        "issues": "https://github.com/chiron/coding-standard/issues",
        "source": "https://github.com/chiron/coding-standard"
    },
    "require": {
        "php": "^7.2 || ^8.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.6.2 || ^0.7",
        "slevomat/coding-standard": "^6.3.9",
        "squizlabs/php_codesniffer": "^3.5.5"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5.5",
        "phpunit/phpunit": "^7.0"
    },
    "scripts": {
        "phpunit": "phpunit --colors=always"
    },
    "config": {
        "sort-packages": true
    }
}
